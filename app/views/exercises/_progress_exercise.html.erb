<tr>
  <td>
    <%= link_to exercise.title, exercise %>
  </td>
  <% if user_signed_in? %>
    <td>
      <% if @competencies.where(exercise_id: exercise.id).first %>
        <%= raw progress_on(exercise) %>
      <% else %>
        <div class="progress" style="margin-bottom: 0px;">
          <div class="bar" style="width: 0%;"></div>
        </div>
      <% end %>
    </td>
  <% end %>
</tr>
